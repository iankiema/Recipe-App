<!-- app/views/login/index.html.erb -->

<h1>Welcome to the Home Page</h1>

<% if user_signed_in? %>
  <p>Hello, <%= current_user.email %>. You are already signed in.</p>
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
<% else %>
  <p>You are not signed in. <%= link_to 'Sign Up', new_user_registration_path %> or <%= link_to 'Log In', new_user_session_path %>.</p>
<% end %>
